<div class="main">
    <div class="outer-container">
        <div class="back"><a href="./">back to list</a></div>
        <h1 data-wio-id="{{post.id}}">
            {{#if post.data.title}}
                {{PrismicText post.data.title}}
            {{else}}
                Untitled
            {{/if}}
        </h1>
    </div>
    {{#each post.data.body}}
        <h1>{{this.slice_label}}</h1>
        {{#ifeq this.slice_type 'text'}}
            <div class="post-part single container">
                {{{HTMLText this.primary.text}}}
            </div>
        {{/ifeq}}
        {{#ifeq this.slice_type 'quote'}}
            <div class="post-part single container">
                <span class="block-quotation">{{PrismicText this.primary.quote}}</span>
            </div>
        {{/ifeq}}
        {{#ifeq this.slice_type 'image_with_caption'}}
            {{#ifeq this.slice_label 'emphasized'}}
                <p class="block-img emphasized">
                    <img src="{{this.primary.image.url}}">
                </p>
                <p>
                    <span class="image-label">{{PrismicText this.primary.caption}}</span>
                </p>
            {{/ifeq}}
            {{#ifeq this.slice_label ''}}
                <div class="post-part single container">
                <p class="block-img">
                        <img src="{{this.primary.image.url}}">
                    </p>
                    <p>
                        <span class="image-label">{{PrismicText this.primary.caption}}</span>
                    </p>
                </div>
            {{/ifeq}}
            {{#ifeq this.slice_label 'image-full-width'}}
                <div class="blog-header single" style="background-image: url({{this.primary.image.url}});">
                    <div class="wrapper">
                        <h2>{{PrismicText this.primary.caption}}</h2>
                    </div>
                </div>
            {{/ifeq}}
        {{/ifeq}}
    {{/each}}
</div>
